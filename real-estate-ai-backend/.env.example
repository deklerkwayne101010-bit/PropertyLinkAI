# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/real_estate_ai?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_REQUEST_TIMEOUT=30000

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# GDPR Configuration
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
GDPR_CONTACT_EMAIL=privacy@yourcompany.com

# Market Data Configuration
PROPERTY24_API_KEY=your-property24-api-key-here
PROPERTY24_BASE_URL=https://api.property24.com
MARKET_DATA_RATE_LIMIT_REQUESTS=100
MARKET_DATA_RATE_LIMIT_WINDOW_MS=3600000
MARKET_DATA_CACHE_TTL=86400
MARKET_DATA_REQUEST_TIMEOUT=30000